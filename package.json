{
  "name": "ecommerce-personalizado-nuevo",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,json,css,md}\"",
    "test": "vitest",
    "test:watch": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:integration:watch": "vitest tests/integration",
    "test:security": "./tests/run-all-tests.sh",
    "test:security:unit": "./tests/run-all-tests.sh --unit",
    "test:security:integration": "./tests/run-all-tests.sh --integration",
    "test:security:e2e": "./tests/run-all-tests.sh --e2e",
    "test:security:coverage": "./tests/run-all-tests.sh --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:security": "playwright test tests/e2e/admin-security.spec.ts",
    "e2e:security:ui": "playwright test tests/e2e/admin-security.spec.ts --ui"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@nanostores/react": "^1.0.0",
    "@stripe/stripe-js": "^4.10.0",
