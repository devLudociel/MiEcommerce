---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Product Customizer - Tipo mug3d.com">
  <div id="customizer-root"></div>
</BaseLayout>

<script>
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';
  import ProductCustomizer from '@/components/3d/ProductCustomizer';

  const container = document.getElementById('customizer-root');
  if (container) {
    const root = createRoot(container);
    root.render(
      createElement(ProductCustomizer, {
        productType: 'mug'
      })
    );
  }
</script>
