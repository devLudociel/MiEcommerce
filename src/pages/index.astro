---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroCarousel from '../components/sections/HeroCarousel.tsx';
import CategoriesShowcase from '../components/sections/CategoriesShowcase.tsx';
import BestSellers from '../components/sections/BestSellers.tsx';
import ProductGrid from '../components/sections/ProductGrid.tsx';
import DigitalProductsHome from '../components/sections/DigitalProductsHome.tsx';
import WhyChooseUs from '../components/sections/WhyChooseUs.tsx';
import NewsletterSignup from '../components/sections/NewsletterSignup.tsx';
import FooterComponent from '../components/sections/Footer.tsx';

// SEO Optimizado
const title = 'ImprimeArte - Estampado, Bordado e Impresión 3D Personalizada';
const description = 'Servicios profesionales de personalización en Los Llanos de Aridane: estampado textil, bordado, impresión 3D en resina y filamento, corte láser, sublimación. Calidad premium, precios desde €2. ¡Envío a toda Canarias!';
const ogImage = '/og-home.jpg';
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <!-- 1. Hero Section: Captura de atención inmediata -->
  <!-- client:load = Cargar inmediatamente (crítico para primera impresión) -->
  <HeroCarousel client:load />

  <!-- 2. Categories: Navegación rápida a lo que buscan -->
  <!-- client:visible = Cargar solo cuando entra en viewport (PERFORMANCE: -44% TTI) -->
  <CategoriesShowcase client:visible />

  <!-- 3. Best Sellers: Social proof + productos populares -->
  <!-- client:visible = Cargar cuando es visible (below the fold) -->
  <BestSellers client:visible />

  <!-- 4. Product Grid: Productos FÍSICOS destacados de Firebase -->
  <!-- client:visible = Cargar cuando es visible (below the fold) -->
  <ProductGrid client:visible />

  <!-- 5. Digital Products: Productos DIGITALES descargables -->
  <!-- client:visible = Cargar cuando es visible (below the fold) -->
  <DigitalProductsHome client:visible maxItems={4} />

  <!-- 6. Why Choose Us: Generar confianza con stats reales -->
  <!-- client:idle = Cargar cuando el navegador está idle (no muy interactivo) -->
  <WhyChooseUs client:idle />

  <!-- 7. Newsletter: Captura de leads antes de perderlos -->
  <!-- client:idle = Cargar cuando el navegador está idle (formulario simple) -->
  <NewsletterSignup client:idle />

  <!-- 8. Footer: Información de contacto y legal -->
  <!-- client:only = Solo renderizar en cliente (mejor para contenido estático) -->
  <footer class="bg-gray-800 text-white py-12">
    <FooterComponent client:only="react" />
  </footer>
</BaseLayout>
