---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AccountMenu from '../../components/account/AccountMenu.tsx';
import ProfilePanel from '../../components/account/ProfilePanel.tsx';
---

<BaseLayout title="Perfil de la cuenta">
  <section class="py-10">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="md:col-span-1">
          <AccountMenu client:load />
        </div>
        <div class="md:col-span-2">
          <ProfilePanel client:load />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

