---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RequireAuth from '../../components/auth/RequireAuth.tsx';
import AccountMenu from '../../components/account/AccountMenu.tsx';
import ProfilePanel from '../../components/account/ProfilePanel.tsx';
---

<BaseLayout title="Perfil de la Cuenta">
  <section class="py-16">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        <div class="lg:col-span-1">
          <AccountMenu client:load />
        </div>
        <div class="lg:col-span-1">
          <RequireAuth client:load>
            <ProfilePanel client:load />
          </RequireAuth>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
