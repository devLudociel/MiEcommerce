---
import Layout from '../../layouts/BaseLayout.astro';
import ProductDetail from '../../components/sections/ProductDetail'; // Ajusta la ruta según dónde esté
import QueryProvider from '../../components/providers/QueryProvider.tsx';

export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/404');
}
---

<Layout title="Producto">
  <QueryProvider client:load>
    <ProductDetail slug={slug} />
  </QueryProvider>
</Layout>
