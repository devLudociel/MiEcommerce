---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RequireAuth from '../../components/auth/RequireAuth.tsx';
import AccountMenu from '../../components/account/AccountMenu.tsx';
import OrdersPanel from '../../components/account/OrdersPanel.tsx';
---

<BaseLayout title="Mis Pedidos - Historial de Compras">
  <section class="py-16">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <div class="lg:col-span-1">
          <AccountMenu client:load />
        </div>
        <div class="lg:col-span-3">
          <RequireAuth client:load>
            <OrdersPanel client:load />
          </RequireAuth>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
