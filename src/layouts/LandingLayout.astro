---
import LandingAnalytics from '../components/landing/LandingAnalytics.tsx';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  slug: string;
  campaignId?: string;
  facebookPixelId?: string;
}

const {
  title,
  description = 'Especialistas en personalizacion e impresion de alta calidad.',
  ogImage = '/og-image.jpg',
  slug,
  campaignId,
  facebookPixelId,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex, nofollow" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.url)} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="dns-prefetch" href="https://firebasestorage.googleapis.com" />

    <title>{title}</title>

    <style>
      /* Landing-specific overrides: no header height, clean scroll */
      html {
        scroll-behavior: smooth;
      }
      body {
        padding-top: 0 !important;
        margin-top: 0 !important;
      }
    </style>
  </head>
  <body class="bg-white min-h-screen">
    <!-- Barra superior minima con logo -->
    <header class="bg-white border-b border-gray-100 py-3 px-4 md:px-8">
      <div class="container mx-auto flex items-center justify-between">
        <a href="/" class="inline-flex items-center gap-2 group" aria-label="Volver a ImprimeArte">
          <div class="w-10 h-10 bg-gradient-rainbow rounded-xl flex items-center justify-center text-white font-black text-lg">
            IA
          </div>
          <span class="text-xl font-black text-gray-800 group-hover:text-cyan-500 transition-colors">
            ImprimeArte
          </span>
        </a>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <!-- Analytics para landing pages -->
    <LandingAnalytics
      client:load
      slug={slug}
      campaignId={campaignId}
      facebookPixelId={facebookPixelId}
    />
  </body>
</html>
