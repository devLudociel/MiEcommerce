---
import Header from '../components/layout/header.tsx';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Especialistas en personalización: estampado, bordado, impresión 3D, corte láser y mucho más.", ogImage = "/og-image.jpg" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.url)} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <style>
      /* Variable CSS para la altura del header - ajústala según tu header real */
      :root {
        --header-height: 208px;
      }
      
      main {
        padding-top: var(--header-height);
      }
      
      /* Breakpoints responsivos si es necesario */
      @media (max-width: 1024px) {
        :root {
          --header-height: 208px;
        }
      }
      
      @media (max-width: 768px) {
        :root {
          --header-height: 220px; /* Puede ser más en móvil si tienes más elementos */
        }
      }
    </style>
  </head>
  <body class="bg-white min-h-screen">
    <Header client:load />
    <main>
      <slot />
    </main>
  </body>
</html>