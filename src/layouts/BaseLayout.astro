---
import Header from '../components/layout/header.tsx';
import { Toaster } from '../lib/notifications';
import { toasterConfig } from '../lib/notifications';
import ErrorBoundaryWrapper from '../components/wrappers/ErrorBoundaryWrapper.tsx';
import Analytics from '../components/analytics/Analytics.tsx';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'Especialistas en personalización: estampado, bordado, impresión 3D, corte láser y mucho más.',
  ogImage = '/og-image.jpg',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.url)} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Prefetch critical routes for faster navigation -->
    <link rel="prefetch" href="/checkout" />
    <link rel="prefetch" href="/cuenta/pedidos" />
    <link rel="prefetch" href="/productos" />
    <link rel="dns-prefetch" href="https://firebasestorage.googleapis.com" />
    <link rel="dns-prefetch" href="https://www.googleapis.com" />

    <title>{title}</title>
    <style>
      /* Variable CSS para la altura del header - ajústala según tu header real */
      :root {
        --header-height: 208px;
      }

      .skip-link {
        position: absolute;
        top: -200px;
        left: 50%;
        transform: translateX(-50%);
        padding: 0.75rem 1rem;
        background-color: #111827;
        color: #fff;
        border-radius: 0.5rem;
        transition: top 0.2s ease;
        z-index: 9999;
      }

      .skip-link:focus {
        top: 1rem;
        outline: 3px solid #0ea5e9;
      }

      main {
        padding-top: var(--header-height);
      }

      /* Breakpoints responsivos si es necesario */
      @media (max-width: 1024px) {
        :root {
          --header-height: 208px;
        }
      }

      @media (max-width: 768px) {
        :root {
          --header-height: 220px; /* Puede ser más en móvil si tienes más elementos */
        }
      }
    </style>
  </head>
  <body class="bg-white min-h-screen">
    <a class="skip-link" href="#contenido-principal">Saltar al contenido principal</a>
    <Header client:load />
    <main id="contenido-principal">
      <!-- Global Error Boundary para capturar errores de React -->
      <ErrorBoundaryWrapper client:only="react">
        <slot />
      </ErrorBoundaryWrapper>
    </main>
    <!-- Toast Notifications Container -->
    <Toaster {...toasterConfig} client:load />
    <!-- Analytics Tracking -->
    <Analytics client:load />
  </body>
</html>
