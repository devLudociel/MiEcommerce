rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Productos
    match /products/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /productos/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Personalizaciones
    match /personalizaciones/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pedidos (servidor Admin SDK maneja writes)
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update, delete: if false;
    }

    // Rese√±as
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Wallets y transacciones
    match /wallets/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false;
    }
    match /wallet_transactions/{txId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if false;
    }

    // Cupones y uso
    match /coupons/{couponId} {
      allow read: if resource.data.active == true;
      allow write: if isAdmin();
    }
    match /coupon_usage/{usageId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if false;
    }

    // Usuarios
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId);
      allow create, delete: if isAdmin();
    }

    // Carritos abandonados (si aplica)
    match /abandoned_carts/{cartId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Denegar por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

