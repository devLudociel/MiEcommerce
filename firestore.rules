rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Productos
    match /products/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /productos/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Personalizaciones
    match /personalizaciones/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pedidos (servidor Admin SDK maneja writes)
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update, delete: if false;
    }

    // Reseñas
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Wallets y transacciones
    match /wallets/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false;
    }
    match /wallet_transactions/{txId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if false;
    }

    // Cupones y uso
    match /coupons/{couponId} {
      // SECURITY: Solo mostrar cupones activos y no expirados
      allow read: if resource.data.active == true
                  && (!('expiryDate' in resource.data)
                      || resource.data.expiryDate > request.time);
      allow write: if isAdmin();
    }
    match /coupon_usage/{usageId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if false;
    }

    // Usuarios
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId);
      allow create, delete: if isAdmin();
    }

    // Carritos abandonados (si aplica)
    match /abandoned_carts/{cartId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Carritos por usuario
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
      allow read: if isAdmin();
    }

    // Newsletter subscribers (solo lectura/escritura via API con Admin SDK)
    match /newsletter_subscribers/{subscriberId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía Admin SDK desde API endpoints
    }

    // Order status history (auditoría de cambios de estado)
    match /order_status_history/{historyId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía Admin SDK
    }

    // Stripe events (webhooks)
    match /stripe_events/{eventId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía webhook handler
    }

    // Order cancellations
    match /order_cancellations/{cancellationId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía Admin SDK
    }

    // Special offers
    match /special_offers/{offerId} {
      allow read: if true; // Cualquiera puede ver ofertas
      allow write: if isAdmin();
    }

    // Categories
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Customization schemas (esquemas de personalización dinámica)
    match /customization_schemas/{schemaId} {
      allow read: if true; // Cualquiera puede leer para ver los customizers
      allow write: if isAdmin(); // Solo admins pueden crear/editar/eliminar
    }

    // Customization categories (categorías personalizadas de schemas)
    match /customization_categories/{categoryId} {
      allow read: if true; // Cualquiera puede leer las categorías disponibles
      allow write: if isAdmin(); // Solo admins pueden crear/editar/eliminar
    }

    // Themes (temáticas centralizadas para personalización)
    match /themes/{themeId} {
      allow read: if true; // Cualquiera puede leer para ver temáticas en el customizer
      allow write: if isAdmin(); // Solo admins pueden crear/editar/eliminar temáticas
    }

    // Tracking events (admin para gestión de pedidos)
    match /tracking_events/{eventId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía Admin SDK
    }

    // Newsletter campaigns (historial de campañas enviadas)
    match /newsletter_campaigns/{campaignId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía Admin SDK
    }

    // Rate limiting data (usado por API endpoints)
    match /rate_limits/{limitId} {
      allow read: if false; // Solo vía Admin SDK
      allow write: if false; // Solo vía Admin SDK
    }

    // System collections (contadores, configuración)
    match /system/{document} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía Admin SDK
    }

    // Pages (páginas informativas, blog)
    match /pages/{pageId} {
      allow read: if true; // Cualquiera puede leer páginas publicadas
      allow write: if isAdmin(); // Solo admins pueden crear/editar/eliminar
    }

    // Gallery (galería de trabajos)
    match /gallery/{itemId} {
      allow read: if true; // Cualquiera puede ver la galería
      allow write: if isAdmin(); // Solo admins pueden subir/editar/eliminar
    }

    // Denegar por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

