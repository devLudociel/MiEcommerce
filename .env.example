# Firebase Client SDK (ya las tienes configuradas)
PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
PUBLIC_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# Firebase Admin SDK (para operaciones del servidor)
# Opción 1: Service Account completo (RECOMENDADO)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Opción 2: Credenciales individuales (ALTERNATIVA)
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTU_PRIVATE_KEY_AQUI\n-----END PRIVATE KEY-----\n"

# Stripe Keys (Modo TEST)
# Consigue estas claves en: https://dashboard.stripe.com/test/apikeys
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_tu_clave_publica_aqui
STRIPE_SECRET_KEY=sk_test_tu_clave_secreta_aqui

# Stripe Webhook Secret (para validar eventos de Stripe)
# Para desarrollo local, usa: stripe listen --forward-to localhost:4321/api/stripe-webhook
# Para producción, configura el webhook en: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret_aqui

# Resend (Emails)
# Consigue tu API key en: https://resend.com/api-keys
RESEND_API_KEY=re_tu_clave_api_aqui
EMAIL_FROM=noreply@tudominio.com

# Admin Emails (separados por coma)
# IMPORTANTE: Estos emails recibirán custom claims de admin
# SECURITY: Use ADMIN_EMAILS (not PUBLIC_) to prevent exposing admin emails to client
ADMIN_EMAILS=tu_email_admin@example.com

# Admin Setup Secret (para asignar custom claims de admin)
# CRÍTICO: Este secret protege el endpoint que permite otorgar privilegios de admin
# DEBE ser una cadena fuerte, aleatoria y única (mínimo 32 caracteres)
# Genera uno con: openssl rand -base64 32
# NUNCA uses el valor de ejemplo en producción
ADMIN_SETUP_SECRET=

# Internal API Secret (para llamadas servidor-a-servidor)
# Usado para autorizar llamadas internas entre APIs (ej: newsletter → send-email)
# Genera uno con: openssl rand -base64 32
INTERNAL_API_SECRET=

